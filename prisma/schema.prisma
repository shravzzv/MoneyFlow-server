generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Entry {
  id        Int       @id @default(autoincrement())
  type      EntryType
  amount    Float
  category  String
  notes     String?
  date      DateTime  @default(now())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum EntryType {
  INCOME
  EXPENSE
}
